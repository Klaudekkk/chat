<div class="section mt-2 has-text-centered">

  <span class="icon mb-6">
  <i class="fa-regular fa-message icon is-large has-text-info"></i>
  </span>
  <p class="title is-1">Zaloguj się</p>
  <p class="subtitle is-3">aby kontynuować</p>
</div>


<div class="columns is-vcentered">
  <div class="column has-text-centered">
    <%= form_for(:session, html: { class: "ui form", role: "form" }, url: login_path) do |f| %>
      <div class="field">
        <%= f.label :username, "Username", class: "label" %>
        <div class="control">
          <%= f.text_field :username, placeholder: "Username" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, "Password", class: "label" %>
        <div class="control">
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
      </div>
      <div class="field">
        <p class="control">
          <%= f.button "Login", class: "button is-info" %>
        </p>
      </div>
    <% end %>
  </div>
<div class="column has-text-centered">
  <p class="subtitle is-3">Nie posiadasz konta? </p>
  <button class="button is-info is-light is-responsive is-large">
    Zarejestruj się
  </button>
</div>

</div>





